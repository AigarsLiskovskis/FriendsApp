{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        {% for article in articles %}
            <a href="/articles/{{ article.id }}">
                <div class="col-sm-4">
                    <div class="panel panel-success">
                        <div class="panel-heading">Article</div>
                        <div class="panel-body">
                            <div>{{ article.title }}</div>
                        </div>
                        <div class="panel-footer"></div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div><br>
{% endblock %}
