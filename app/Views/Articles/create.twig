{% extends "layout.twig" %}
{% block content %}
    <div class="container" style="width: 500px">
        <form method="post" action="/articles">
            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" class="form-control" id="Title" name="title" placeholder="Title" value="{{ inputs.title }}" required>
                {% if errors.title %}
                    <small style="color:red;">{{ errors.title[0] }}</small>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea type="text" class="form-control" id="description"  placeholder="Description" name="description" rows="3" cols="20">{{ inputs.description }}</textarea>
                {% if errors.description %}
                    <small style="color:red;">{{ errors.description[0] }}</small>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Add new Article</button>
        </form>
    </div>
{% endblock %}
